if [ -x $(which yarn) ]; then
  export PATH=$PATH:$(yarn global bin)
fi

alias ni="npm install"
alias nid="npm install --save-dev"
alias nl="npm run lint"
alias nr="npm run"
alias ns="npm start"
alias nt="npm test"
alias ntw="npm run test:watch"

alias ya="yarn add"
alias yad="yarn add --dev"
alias yl="yarn lint"
alias ys="yarn start"
alias yt="yarn test"
alias ytw="yarn test:watch"
