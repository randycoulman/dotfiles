[user]
	name = Randy Coulman
	email = rcoulman@gmail.com

[alias]
  br = branch
  ci = commit
  cl = clone
  co = checkout
  diff = icdiff
  dc = diff --cached
  dt = difftool
  dtc = difftool --cached
  ff = pull --ff-only
  fixpair = commit --amend --reset-author --no-edit
  hist = log --color --graph --format=\"%Cred%h%Creset |%C(bold yellow)%d%Creset %s %Cgreen(%ar)%Creset %C(bold blue)<%an/%cn>%Creset\"
  mt = mergetool
  pullff = pull --ff-only
  st = status
  sync = !git co master && git pull && git fetch --all -p && git snip --full -n
  syncf = snip --full -f

[color]
	branch = auto
	diff = auto
    grep = auto
    interactive = auto
    showbranch = auto
	status = auto
    ui = auto

[credential]
	helper = osxkeychain

[core]
	quotepath = off
	excludesfile = /Users/randy/.gitignore_global
  editor = atom --wait

[diff]
  compactionHeuristic = true
  tool = kdiff3

[difftool]
  prompt = false

